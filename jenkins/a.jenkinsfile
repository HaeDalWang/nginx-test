pipeline { 
    agent {
	    label "jenkins-agent-podman"
	} 
    environment {
        commitId = sh(returnStdout: true, script: 'git rev-parse HEAD').trim()
    }
    stages { 
        stage ('checkout') { 
            steps { 
                checkout scm
            }
        }
        stage ('build'){
            steps {
                //sh "echo 'Commit ID: ${commitId}'"
                sh "podman build -t nginx-test:${commitId} ."
            }
        }
    }
}